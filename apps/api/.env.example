# Database Configuration
# Connection string format: postgres://user:password@host:port/database
DATABASE_URL=postgres://your_user:your_password@localhost:5432/your_database

# Server Configuration (optional - defaults in config/default.json)
PORT=3030
HOSTNAME=localhost

# AWS S3 Storage (managed by Infisical in production)
ACCESS_KEY_ID=your_access_key_id
SECRET_ACCESS_KEY=your_secret_access_key

# Cloudinary (if using image uploads)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Test Database (use different port to avoid conflicts)
# DATABASE_URL=postgres://your_user:your_password@localhost:5433/your_test_database
